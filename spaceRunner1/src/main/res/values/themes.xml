<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SpaceRunner" parent="android:Theme.Material.Light.NoActionBar" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.SpaceRunnerCompat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    <style name="Theme.SpaceRunnerCompat.Launcher"  >
        <item name="android:windowNoTitle" >true</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@drawable/launch_screen</item>

    </style>

    <style name="Theme.SpaceRunner.Launcher" >
        <item name="android:windowNoTitle" >false</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@drawable/launch_screen</item>

    </style>
</resources>